# Aura Theme Configuration

# Standard Colors
export black="#15141b"
export white="#edecee"
export gray="#6d6d6d"
export purple="#a277ff"
export purple_fading="#3d375e7f"
export green="#61ffca"
export orange="#ffca85"
export pink="#f694ff"
export blue="#82e2ff"
export red="#ff6767"

export background_color="$black"
export foreground_color="$white"
export muted_color="$gray"
export selection_color="$purple_fading"
export primary_color="$purple"
export secondary_color="$green"
export tertiary_color="$orange"
export quaternary_color="$pink"
export quinary_color="$blue"
export senary_color="$red"

export warning_color="$orange"
export success_color="$green"
export error_color="$red"

